<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4859A4"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/make_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="NFC TAG\n계정 만들기"
        android:textColor="#F6F5F5"
        android:textSize="23dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/make_account_text"
        android:layout_marginTop="100dp"
        android:id="@+id/inputs"
        android:layout_centerHorizontal="true"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_edit_text_style"
                android:hint="이름"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/user_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_edit_text_style"
            android:hint="이메일"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:id="@+id/user_paswd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_edit_text_style"
            android:hint="비밀번호(6자리 이상)"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:id="@+id/user_paswd_check"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/round_edit_text_style"
            android:hint="비밀번호 확인"
            android:inputType="text|textPassword"
            android:maxLines="1"
            android:padding="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputs"
        android:id="@+id/service_messege"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="회원가입시"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="#9c59c9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="에 동의하신 것으로 간주합니다."
            />

    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_messege"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_button_style"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>

