<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4859A4"
    tools:context=".LoginActivity"
    >

    <ImageView
        android:layout_width="85sp"
        android:layout_height="85sp"
        android:src="@drawable/nfc_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:id="@+id/main_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag Me"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_icon"
        android:id="@+id/welcome"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_style"
        android:padding="15sp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_below="@id/welcome"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginTop="30sp"
        android:hint="이메일"
        android:id="@+id/input_email"
        />

    <EditText
        android:id="@+id/input_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_email"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="2sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/round_edit_text_style"
        android:hint="비밀번호"
        android:inputType="text|textPassword"
        android:maxLines="1"
        android:padding="15sp" />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_below="@id/input_pswd"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_style"
        android:textColor="#ffffff"
        android:id="@+id/login_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정이 없으신가요?"
        android:layout_below="@id/login_button"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="계정 만들기"
        android:layout_below="@id/login_button"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_style"
        android:id="@+id/regist_button"
        />

</RelativeLayout>